//- Detail view

.detail
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  z-index: 2
  background: $grey-drk no-repeat 50% 50%
  background-size: cover
  text-align: center
  color: white
  {fadeIn}

{fadeInKeyframes}

.detail

  .overlay
    width: 100%
    height: 100%
    background: black(.7)

  .detail-info
    border: 1px solid white

  h1
    margin-bottom: 20px
    font-size: 80px

  h2
    margin-bottom: 10px
    font-size: 20px
    font-weight-normal: $font-weight-normal
    line-height: 1.2

  h3
    margin-bottom: 20px
    font-weight: $font-weight-medium
    font-size: 16px

  .btn
    margin-top: 40px

  .description
    font-family: $font-family-clavo
    font-weight: $font-weight-normal
    font-style: italic
    font-size: 18px
    line-height: 1.4

    em
      display: inline
      border-bottom: 1px solid white
      font-weight: $font-weight-medium
      text-transform: uppercase

  .photo-credit
    padding: 7px
    background: black(.3)
    border-radius: 3px

    a
      color: white
      font-weight: $font-weight-bold

      &:hover
        opacity: .5

  .back
    padding: 5px 8px
    position: absolute
    top: 13px
    left: 7px
    text-transform: uppercase
    font-weight: $font-weight-bold
    color: white

    &:hover
      opacity: .5

@media (max-width: 650px)

  .detail
    width: 100%
    height: 100%

    .container
      width: 100%
      height: 100%
      padding: 60px 15px 30px
      overflow-y: auto

    .detail-info
      min-height: 320px
      padding: 30px
      position: static
      top: 0
      left: 0
      transform: none

    .photo-credit
      margin: 20px 0
      display: inline-block

    .back
      background: black(.6)

@media (min-width: 651px)

  .detail

    .detail-info
      min-width: 450px
      min-width: 450px
      padding: 50px
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%,-50%)

    .photo-credit
      position: absolute
      top: 15px
      right: 15px