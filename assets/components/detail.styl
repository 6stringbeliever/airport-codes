//- Detail styling

.detail
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  z-index: 2
  background: $grey-drk no-repeat 50% 50%
  background-size: cover
  text-align: center
  color: white
  -webkit-animation: fadein .5s
  animation: fadein .5s

@keyframes fadein
  from
    opacity: 0
  to
    opacity: 1

.detail

  & > div
    width: 100%
    height: 100%
    background: black(.7)

  .detail-info
    padding: 50px
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)
    border: 1px solid white

  h1
    margin-bottom: 20px
    font-size: 80px

  h2
    margin-bottom: 10px
    font-size: 24px
    font-weight-normal: $font-weight-normal
    line-height: 1.2

  h3
    margin-bottom: 20px
    font-weight: $font-weight-medium
    font-size: 16px

    span:not(:first-child)
      &:before
        content: ', '
    span:empty
      display: none

  .description
    font-family: $font-family-clavo
    font-weight: $font-weight-normal
    font-style: italic
    font-size: 18px
    line-height: 1.4

    em
      display: inline-block
      border-bottom: 1px solid white
      font-weight: $font-weight-medium
      text-transform: uppercase

  .photo-credit
    padding: 7px
    position: absolute
    top: 15px
    right: 15px
    background: black(.3)
    border-radius: 3px

    a
      color: white
      font-weight: $font-weight-bold

      &:hover
        opacity: .5

  .back
    position: absolute
    top: 18px
    left: 15px
    text-transform: uppercase
    font-weight: $font-weight-bold
    color: white