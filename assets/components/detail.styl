//- Detail styling

.detail
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  background: $grey-drk no-repeat 50% 50%
  background-size: cover
  text-align: center
  color: white

  & > div
    width: 100%
    height: 100%
    background: black(.6)

  &.hidden
    display: none

  .detail-info
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)

  h1
    margin-bottom: 20px
    font-size: 100px

  h2
    margin-bottom: 10px
    font-size: 24px

  h3
    margin-bottom: 15px
    font-size: 16px

    span:not(:first-child)
      &:before
        content: ', '
    span:empty
      display: none

