// Site info pages

.site-info
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  z-index: 2
  background: $grey-drk no-repeat 50% 50%
  background-size: cover
  text-align: center
  color: white
  {fadeIn}

  // Header fakeout
  &:after
    width: 100%
    height: 50px
    position: absolute
    top: 0
    left: 0
    z-index: 1
    background: rgba(50,50,50,.8)
    content: ''

  .container
    width: 100%
    height: 100%
    padding: 30px 15px
    overflow-y: auto

  .content
    max-width: 550px
    margin: 80px auto 50px

    @media (max-width: 500px)
      margin-top: 50px

  h1
    margin-bottom: 20px
    font-size: 40px

  p, ul
    margin-bottom: 15px
    text-align: left

    a
      border-bottom: 1px dotted transparent
      color: $blue
      font-weight: $font-weight-medium

      &:hover
        border-color: $blue

  .quote
    font-size: 22px
    text-align: center

  ul
    padding-left: 30px
    font-family: $font-family-clavo
    font-style: italic
    font-size: 18px
    line-height: 1.4
    list-style-type: disc

    li
      margin-bottom: 15px

  hr
    margin: 30px 0
    border: none
    border-bottom: 1px dotted white(.3)

  .footnote
    margin-top: 40px

    p
      margin-bottom: 10px
      font-size: 15px

      a
        color: white